<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/head') %>
    <title>Bloglelo</title>
  </head>
  <body>
    <%- include('./partials/nav') %>
    <main
      class="bg-gray-50 dark:bg-gray-900 min-h-screen flex flex-wrap flex-col md:flex-row md:flex-row gap-4 justify-start items-start pt-25 pb-4 px-4 md:px-8"
    >
    <% if (locals.allBlogs) { %>
        <% allBlogs.forEach(blog => { %>
            <div
              class="md:w-80 md:h-100 bg-white border border-gray-200 rounded-lg shadow-sm dark:bg-gray-800 dark:border-gray-700"
            >
              <a href="#">
                <img
                  class="rounded-t-lg md:h-48 md:w-80 overflow-hidden"
                  src= <%= blog.coverImageURL %>
                  alt="Cover Image"
                />
              </a>
              <div class="p-5">
                <a href="#">
                  <h5
                    class="mb-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white"
                  >
                    <%= blog.title %>
                  </h5>
                </a>
                <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
                  <%= blog.body.slice(0,80) + "..."%>
                </p>
                <a
                  href="#"
                  class="inline-flex items-center px-3 py-2 text-sm font-medium text-center text-white bg-blue-700 rounded-lg hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800"
                >
                  Read more
                  <svg
                    class="rtl:rotate-180 w-3.5 h-3.5 ms-2"
                    aria-hidden="true"
                    xmlns="http://www.w3.org/2000/svg"
                    fill="none"
                    viewBox="0 0 14 10"
                  >
                    <path
                      stroke="currentColor"
                      stroke-linecap="round"
                      stroke-linejoin="round"
                      stroke-width="2"
                      d="M1 5h12m0 0L9 1m4 4L9 9"
                    />
                  </svg>
                </a>
              </div>
            </div>
        <% }) %>
    <% } %>
    </main>

    <%- include('./partials/footer') %>
  </body>
</html>
